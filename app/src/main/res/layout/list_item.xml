<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".DetailActivity">

<LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/layout_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="@dimen/left_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Name"
            android:textSize="@dimen/tv_listItem_tSize"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMovieDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:text="Movie Description"
            android:textSize="@dimen/tv_listItem_tSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/right_margin_left"
        android:layout_marginTop="@dimen/right_margin_top"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/img_dene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            android:onClick="responseAct"
            app:srcCompat="@android:drawable/ic_menu_info_details" />
    </LinearLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>